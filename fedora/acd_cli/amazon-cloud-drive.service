[Unit]
Description=user Amazon Cloud Drive FUSE mount
Documentation=https://acd-cli.readthedocs.org/en/latest/
AssertPathIsDirectory=%h/acd
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/acd_cli mount --foreground %h/acd
ExecStop=/usr/bin/acd_cli -v -nl umount %h/acd
Restart=on-abort

[Install]
WantedBy=default.target
